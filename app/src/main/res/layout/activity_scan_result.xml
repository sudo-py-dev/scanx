<?xml version='1.0' encoding='utf-8'?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:background="?attr/colorSurface">
    <com.google.android.material.appbar.AppBarLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@android:color/transparent" app:elevation="0dp">
        <com.google.android.material.appbar.MaterialToolbar android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" app:navigationIcon="@drawable/ic_arrow_back" app:title="@string/scan_result" app:titleCentered="true" app:navigationIconTint="?attr/colorOnSurface" app:titleTextColor="?attr/colorOnSurface" />
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="24dp">
            <com.google.android.material.card.MaterialCardView android:id="@+id/cardResult" style="?attr/materialCardViewElevatedStyle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="24dp" app:cardBackgroundColor="?attr/colorSurfaceContainerLow">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="24dp">
                    <ImageView android:layout_width="48dp" android:layout_height="48dp" android:layout_gravity="center" android:contentDescription="@null" android:src="@drawable/ic_check_circle" app:tint="?attr/colorPrimary" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_gravity="center" android:text="@string/scan_successful" android:textAppearance="?attr/textAppearanceTitleMedium" android:textColor="?attr/colorOnSurface" />
                    <com.google.android.material.divider.MaterialDivider android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginVertical="16dp" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/content" android:textAppearance="?attr/textAppearanceLabelMedium" android:textColor="?attr/colorOnSurfaceVariant" />
                    <TextView android:id="@+id/tvScannedData" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:textAppearance="?attr/textAppearanceBodyLarge" android:textColor="?attr/colorOnSurface" android:textIsSelectable="true" />
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:orientation="horizontal" android:baselineAligned="false">
                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/format" android:textAppearance="?attr/textAppearanceLabelMedium" android:textColor="?attr/colorOnSurfaceVariant" />
                            <TextView android:id="@+id/tvFormat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:textAppearance="?attr/textAppearanceBodyMedium" android:textColor="?attr/colorPrimary" android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/type" android:textAppearance="?attr/textAppearanceLabelMedium" android:textColor="?attr/colorOnSurfaceVariant" />
                            <TextView android:id="@+id/tvType" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:textAppearance="?attr/textAppearanceBodyMedium" android:textColor="?attr/colorPrimary" android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout android:id="@+id/llWifiDetails" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:orientation="vertical" android:visibility="gone">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/view_wifi_details" android:textAppearance="?attr/textAppearanceLabelMedium" android:textColor="?attr/colorOnSurfaceVariant" />
                        <TextView android:id="@+id/tvWifiSsid" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:textAppearance="?attr/textAppearanceBodyLarge" android:textColor="?attr/colorOnSurface" android:textStyle="bold" />
                        <TextView android:id="@+id/tvWifiPassword" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:textAppearance="?attr/textAppearanceBodyLarge" android:textColor="?attr/colorOnSurface" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:baselineAligned="false" android:gravity="center">
                <com.google.android.material.button.MaterialButton android:id="@+id/btnCopy" style="@style/Widget.Material3.Button.OutlinedButton" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginEnd="8dp" android:text="@string/copy" android:contentDescription="@string/copy" app:icon="@drawable/ic_copy" />
                <com.google.android.material.button.MaterialButton android:id="@+id/btnShare" style="@style/Widget.Material3.Button.OutlinedButton" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="8dp" android:text="@string/share" android:contentDescription="@string/share" app:icon="@drawable/ic_share" />
            </LinearLayout>
            <com.google.android.material.button.MaterialButton android:id="@+id/btnSearchWeb" style="@style/Widget.Material3.Button.TonalButton" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="16dp" android:text="@string/search_web" app:icon="@drawable/ic_search" app:backgroundTint="?attr/colorSurfaceContainerHigh" app:iconTint="?attr/colorOnSurface" />
            <com.google.android.material.button.MaterialButton android:id="@+id/btnOpenUrl" style="@style/Widget.Material3.Button.TonalButton" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="16dp" android:text="@string/open_url" android:visibility="gone" app:icon="@drawable/ic_open_in_browser" app:backgroundTint="?attr/colorSecondaryContainer" app:iconTint="?attr/colorOnSecondaryContainer" />
            <com.google.android.material.button.MaterialButton android:id="@+id/btnConnectWifi" style="@style/Widget.Material3.Button.TonalButton" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="16dp" android:text="@string/connect_wifi" android:visibility="gone" app:icon="@drawable/ic_wifi" app:backgroundTint="?attr/colorSecondaryContainer" app:iconTint="?attr/colorOnSecondaryContainer" />
            <com.google.android.material.button.MaterialButton android:id="@+id/btnOpenMap" style="@style/Widget.Material3.Button.TonalButton" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="16dp" android:text="@string/open_map" android:visibility="gone" app:icon="@drawable/ic_location" app:backgroundTint="?attr/colorSecondaryContainer" app:iconTint="?attr/colorOnSecondaryContainer" />
            <com.google.android.material.button.MaterialButton android:id="@+id/btnCall" style="@style/Widget.Material3.Button.TonalButton" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="16dp" android:text="@string/call_number" android:visibility="gone" app:icon="@drawable/ic_phone" app:backgroundTint="?attr/colorSecondaryContainer" app:iconTint="?attr/colorOnSecondaryContainer" />
            <com.google.android.material.button.MaterialButton android:id="@+id/btnSendEmail" style="@style/Widget.Material3.Button.TonalButton" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="16dp" android:text="@string/send_email" android:visibility="gone" app:icon="@drawable/ic_email" app:backgroundTint="?attr/colorSecondaryContainer" app:iconTint="?attr/colorOnSecondaryContainer" />
            <com.google.android.material.button.MaterialButton android:id="@+id/btnSendSms" style="@style/Widget.Material3.Button.TonalButton" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="16dp" android:text="@string/send_sms" android:visibility="gone" app:icon="@drawable/ic_sms" app:backgroundTint="?attr/colorSecondaryContainer" app:iconTint="?attr/colorOnSecondaryContainer" />
            <com.google.android.material.button.MaterialButton android:id="@+id/btnAddContact" style="@style/Widget.Material3.Button.TonalButton" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="16dp" android:text="@string/add_contact" android:visibility="gone" app:icon="@drawable/ic_person" app:backgroundTint="?attr/colorSecondaryContainer" app:iconTint="?attr/colorOnSecondaryContainer" />
            <com.google.android.material.button.MaterialButton android:id="@+id/btnAddEvent" style="@style/Widget.Material3.Button.TonalButton" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="16dp" android:text="@string/add_to_calendar" android:visibility="gone" app:icon="@drawable/ic_event" app:backgroundTint="?attr/colorSecondaryContainer" app:iconTint="?attr/colorOnSecondaryContainer" />
            <com.google.android.material.button.MaterialButton android:id="@+id/btnOpenStore" style="@style/Widget.Material3.Button.TonalButton" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="16dp" android:text="@string/open_in_play_store" android:visibility="gone" app:icon="@drawable/ic_open_in_new" app:backgroundTint="?attr/colorSecondaryContainer" app:iconTint="?attr/colorOnSecondaryContainer" />
            <com.google.android.material.button.MaterialButton android:id="@+id/btnScanAgain" style="@style/Widget.Material3.Button.UnelevatedButton" android:layout_width="match_parent" android:layout_height="56dp" android:layout_marginTop="32dp" android:text="@string/scan_again" app:icon="@drawable/ic_scan" app:backgroundTint="?attr/colorPrimary" app:iconTint="?attr/colorOnPrimary" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>