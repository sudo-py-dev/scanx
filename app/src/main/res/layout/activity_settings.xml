            <com.google.android.material.card.MaterialCardView android:id="@+id/btnSearchEngine" style="?attr/materialCardViewElevatedStyle" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" app:cardBackgroundColor="?attr/colorSurfaceContainerLow" app:strokeWidth="0dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:padding="16dp">
